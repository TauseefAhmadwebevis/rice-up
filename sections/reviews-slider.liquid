                {% if block.settings.title != blank %}
                  <div class="reviews__card-title">
                    <h4 class="reviews__card-title-text mt-[24px] mb-[16px] text-[#000000] font-normal text-[18px] leading-[100%] tracking-normal capitalize">{{ block.settings.title }}</h4>
                  </div>
                {% endif %}
                {% if block.settings.desc != blank %}
                  <div class="reviews__card-desc font-roboto font-normal text-[16px] leading-[150%] tracking-norma text-[#000000] opacity-60">
                    {{ block.settings.desc | remove: '<p>'  | remove: '</p>' }}
                  </div>
                {% endif %}
                {% if block.settings.name != blank and block.settings.date != blank %}
                  <div class="reviews__card-details flex flex-wrap items-center justify-between mt-[24px]">
                    {% if block.settings.name != blank %}
                      <span class="reviews__card-name text-[#000000] font-normal text-[18px] leading-[100%] tracking-normal capitalize">
                        {{ block.settings.name }}
                      </span>
                    {% endif %}
                    {% if block.settings.date != blank %}
                      <span class="reviews__card-date font-roboto font-normal text-[16px] leading-[150%] tracking-norma text-[#000000] opacity-60">
                        {{ block.settings.date }}
                      </span>
                    {% endif %}
                  </div>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
  {
    "name": "Reviews",
    "settings": [
      {
        "type": "text",
        "label": "Heading",
        "id": "heading"
      }
    ],
    "blocks": [
      {
        "type": "review",
        "name": "review",
        "settings": [
          {
            "type": "image_picker",
            "label": "Image",
            "id": "image"
          },
          {
            "type": "text",
            "label": "Title",
            "id": "title"
          },
          {
            "type": "textarea",
            "label": "Description",
            "id": "desc"
          },
          {
            "type": "text",
            "label": "Name",
            "id": "name"
          },
          {
            "type": "text",
            "label": "Date",
            "id": "date"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Reviews"
      }
    ]
  }
{% endschema %}