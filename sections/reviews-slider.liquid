{{ 'reviews-slider.css' | asset_url | stylesheet_tag }}

<section class="reviews bg-[#FDFFD6] py-[80px] mobile:py-[60px] overflow-x-hidden">
  <div class="reviews__container">
    {% if section.settings.heading != blank %}
      <h2 class="reviews__heading text-[#2F2F2F] font-bold text-[48px] leading-[64px] mobile:text-[32px] mobile:leading-[42px] mb-[48px] mobile:mb-[32px] text-center">{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.blocks.size > 0 %}
      <div class="reviews__list flex gap-[24px] hide-scrollbar">
        {% for block in section.blocks %}
          <div class="reviews__list-item">
            <div class="reviews__list-wrapper flex flex-wrap gap-[24px]">
              {% if block.settings.image != blank %}
                <div class="reviews__list-img w-[calc(50%-12px)] mobile:w-full">
                  <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt }}" class="max-w-full w-full block aspect-[0.94] object-cover rounded-[16px]">
                </div>
              {% endif %}
              <div class="reviews__list-card w-[calc(50%-12px)] mobile:w-full bg-[#ffffff] rounded-[16px] border border-[#7E4F26] px-[20px] py-[20px] flex flex-col justify-center">
