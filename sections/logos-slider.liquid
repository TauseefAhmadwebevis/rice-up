{{ 'logos-slider.css' |  asset_url |  stylesheet_tag }}

<section class="logos-slider bg-[#F5F5F5] py-[24px] overflow-x-hidden">
  <div class="logos-slider__container">
    {% if section.blocks.size > 0 %}
      <div class="logos-slider__blocks flex gap-[70px] mobile:gap-[50px] items-center">
