          <div class="logos-slider__block logos-slider__block--{{ forloop.index }} flex flex-wrap gap-[14px] items-center mobile:gap-[10px]">
            {% if block.settings.icon != blank %}
              <img src="{{ block.settings.icon | image_url }}" class="logos-slider__block-icon" alt="{{ block.settings.icon.alt }}" />
            {% endif %}
            {% if block.settings.title != blank %}
              <h3 class="logos-slider__block-title font-normal text-[20px] leading-[100%] tracking-[0] text-[#000000] mobile:text-[16px]">{{ block.settings.title }}</h3>
